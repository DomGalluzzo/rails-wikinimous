<div class="d-flex">
  <div class="container">
    <ul class="list-group">
      <% @articles.each do |article| %>
        <li class="list-group-item shadow p-3 mb-2 bg-body rounded">
          <h2><%= link_to article.title, article_path(article) %></h2>
          <p><%= article.content %></p>
        </li>
      <% end %>
    </ul>
  </div>
</div>